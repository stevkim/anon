generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id        String    @id @unique @default(uuid())
  createdAt DateTime  @default(now())
  content   String
  likes     Int?      @default(0)
  reports   Int?      @default(0)
  authorId  String
  Reports   Reports[]
}

model Reports {
  id     String @id @unique @default(uuid())
  reason String
  postId String
  post   Post   @relation(fields: [postId], references: [id])
}
